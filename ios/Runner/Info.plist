        <dict>
            <key>CFBundleURLName</key>
            <string>com.yourcompany.calori_wise_app</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <!-- REVERSED_CLIENT_ID จาก GoogleService-Info.plist -->
